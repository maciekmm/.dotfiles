# exit i3 (logs you out of your X session)
bindsym $mod+$modalt+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+$modalt+$sup+e exec "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# take screenshots
set $screenshot [u]pload, [c]lipboard, [s]ave, [f]ile
mode "$screenshot" {
        bindsym --release u exec $HOME/scripts/screenshot "-s"; mode "default"
        bindsym Print exec $HOME/scripts/screenshot "-s"; mode "default"
        bindsym --release c exec maim -s | xclip -selection clipboard -t image/png; mode "default"
        bindsym --release s exec maim -s | tee ~/images/screenshots/$( uuidgen ).png | xclip -selection clipboard -t image/png; mode "default"
		bindsym --release f exec file=$(zenity --file-selection --save --filename="$HOME/images/screenshots/$(uuidgen).png" --title="Screenshot") && maim -s "$file"; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym Print mode "$screenshot"

# rarely used options
set $options [s]potify, [p]ause notifications, [r]esume notifications, p[i]n window, [m]onitors refresh, turn [o]ff main monitor
mode "$options" {
        # Spotify + youtube
        bindsym s exec --no-startup-id "python $HOME/scripts/spotatube/spotatube.py | xclip -selection clipboard && notify-send 'Spotify link copied'"; mode "default"

        # resume notifications
        bindsym r exec --no-startup-id "notify-send 'DUNST_COMMAND_RESUME'"; mode "default"
        # pause notifications
        bindsym p exec --no-startup-id "notify-send 'DUNST_COMMAND_PAUSE'"; mode "default"
        
        bindsym i fullscreen disable; floating enable; resize set 700 400; sticky enable; move window to position 1315 900; mode "default"
		bindsym m exec "$HOME/scripts/monitor-refresh"; mode "default"
		bindsym o exec xrandr --output eDP1 --off; mode "default"
            
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+o mode "$options"

# Screen locking
