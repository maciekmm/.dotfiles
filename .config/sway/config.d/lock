set $lock $HOME/.config/sway/swaylock.sh

exec swayidle -w \
         timeout 300 $lock \
              resume 'swaymsg "output * dpms on"' \
         timeout 600 'swaymsg "output * dpms off"' \
              resume 'swaymsg "output * dpms on"' \
         before-sleep $lock \
		 after-resume 'swaymsg "output * dpms on"'

bindsym $sup+l exec $lock
bindsym $sup+$modalt+s exec "systemctl suspend"
bindsym $sup+$modalt+r exec "systemctl reboot"
bindsym $sup+$modalt+p exec "systemctl poweroff"
bindsym $sup+$modalt+h exec "systemctl hibernate"
